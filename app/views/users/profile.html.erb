<h3 class="profile-title">Profile</h3>

<div class="user-icon">
      <% if @user.img? %>
        <%= image_tag @user.img.url, class: "user-img" %>
      <% else %>
        <img src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg", size: "60*60", alt="アイコン画像", class="user-img">
      <% end %>  
</div>

<%= form_with model:@user, url: {controller: "users", action: "update"}, class: "user-table" do |f| %> 
   <div class="user-info">
        <table>
            <tr>
                <th><%= f.label :img, "アイコン画像" %></th>
                <td><%= f.file_field :img, class: "user-profile-img" %></td>
            </tr>
            <tr>
                <th><%= f.label :name, "名前" %></th>
                <td><%= f.text_field :name, class: "" %></td>
            </tr>
            <tr>
                <th><%= f.label :introduction, "自己紹介" %></th>
                <td><%= f.text_area :introduction, class: "" %></td>
            </tr>
        </table>
   </div> 
    

    <div>
        <ul>
            <li><%= f.submit "更新"%></li>
        </ul>
    </div>
    
<% end %>
