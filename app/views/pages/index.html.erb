

<header class="header">
    <div class="header-inner">
        <form action=""> <!--form action-->
            <div class="header-search">
                <input type="text" name="area" id="area" value="" class="form-control" placeholder="エリア">
                <i class="fas fa-map-marker-alt">
                    ::before
                </i>
            </div>
            <div class="header-search ">
                <input type="text" name="keyword" id="keyword" value="" class="form-control" placeholder="キーワード">
                <i class="fas fa-search">
                    ::before
                </i>
            </div>
            <input type="submit" name="commit" value="" class="d-none" data-disable-with>
        </form>
    
        <div class="header-right-nav">
            <div class="nav-item">
                <nav>
                    <% if user_signed_in? %>
                     <strong><%= link_to current_user.username, pages_show_path %></strong>
                        <%= link_to 'Change profile', edit_user_registration_path %>
                        <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
                    <% else %>
                        <div class="btn-signup">
                            <%= link_to 'Signup', new_user_registration_path %>
                        </div>
                        <div class="btn-login">
                            <%= link_to 'Login', new_user_session_path %>
                        </div>
                    <% end %>
                </nav>
            </div>
        </div>
    </div>
</header>

<div class="clear-fix">
    ::after
</div>

